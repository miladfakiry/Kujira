@using MudBlazor
@inherits LayoutComponentBase



<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    
    @*Header AppBar*@
    <MudAppBar Color="Color.Transparent" Fixed="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        
        <MudIconButton Icon="@Icons.Custom.Brands.Google" Color="Color.Inherit"/>
    </MudAppBar>
    
    @*Left NavBar*@
    <MudDrawer Color="Color.Transparent" @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudPaper Class="d-flex justify-center flex-grow-1 gap-0" Elevation="0">
                <MudImage Src="Images/KujiraTransparent.png" Width="55" Height="55" Alt="Kujira logo" />
            </MudPaper>
            <MudDivider Class="my-2"/>
            <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavGroup Title="Applikationen" Icon="@Icons.Material.Filled.SettingsApplications" Expanded="true">
                <MudNavLink Href="/searchPage" Icon="@Icons.Material.Filled.Search" IconColor="Color.Success">Platzsuche</MudNavLink>
                <MudNavLink Href="/offerPlaces" Icon="@Icons.Material.Filled.Place" IconColor="Color.Info">Plätze anbieten</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/servers" Icon="@Icons.Material.Filled.Storage">Servers</MudNavLink>
            <MudNavLink Href="/billing" Icon="@Icons.Material.Filled.Receipt" Disabled="true">Rechnungen</MudNavLink>
            <MudNavGroup Title="Settings" Icon="@Icons.Material.Filled.Settings" Expanded="true">
                <MudNavLink Href="/users" Icon="@Icons.Material.Filled.People" IconColor="Color.Success">Users</MudNavLink>
                <MudNavLink Href="/security" Icon="@Icons.Material.Filled.Security" IconColor="Color.Info">Security</MudNavLink>
            </MudNavGroup>
            
            <MudNavGroup Title="Adminbereich" Icon="@Icons.Material.Filled.AdminPanelSettings" Expanded="true">
                <MudNavLink Href="/adminUser" Icon="@Icons.Material.Filled.People" IconColor="Color.Success">Users</MudNavLink>
                <MudNavLink Href="/adminPlaces" Icon="@Icons.Material.Filled.Place" IconColor="Color.Success">Places</MudNavLink>
                <MudNavLink Href="/adminCompany" Icon="@Icons.Material.Filled.AddBusiness" IconColor="Color.Info">Companies</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
        
        @*Footer AppBar*@
        <MudAppBar Bottom="true" Fixed="true" Color="Color.Tertiary" Elevation="1">
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.FavoriteBorder" Color="Color.Inherit" Edge="Edge.End" />
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
        </MudAppBar>
        
        @*Version of Application*@
        <MudContainer Class="d-flex flex-column-reverse flex-grow-1">
            <MudText Typo="Typo.caption">Version 0.1</MudText>
        </MudContainer>

    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}